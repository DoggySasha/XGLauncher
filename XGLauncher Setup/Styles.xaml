                            Background="{TemplateBinding Background}"
                            SnapsToDevicePixels="True">
                        <Grid>
                            <Border Name="border" CornerRadius="4" Opacity="0.5"/>
                            <ContentPresenter x:Name="contentPresenter" Focusable="False" 
